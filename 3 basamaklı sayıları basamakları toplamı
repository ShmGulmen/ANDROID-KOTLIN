package shm

fun main()
{
    println("Bir sayı giriniz")
    var a = readLine()!!.toInt()

    println("Sayının basamakları toplamı = ${sum3Digits(a)}")
}
fun sum3Digits(value: Int)
{
    var x = value % 10
    var y = value / 10 % 10
    var z = value / 100

    var sum = x + y + z

    println("sum = $sum")
}
