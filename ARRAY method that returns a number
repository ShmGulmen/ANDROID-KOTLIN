package shm

import kotlin.math.absoluteValue

fun getDigits(value:Int):IntArray
{
    var n = getDigitsCount(value)

    var numbers = IntArray(n)

    var temp = value.absoluteValue

    while (temp != 0){
        numbers[--n] = temp % 10
        temp /= 10
    }
    return numbers
}

fun getDigitsCount(n: Int): Int
{
    if(n == 0)
        return 1

    var value = n
    var count = 0

    while (value != 0){
        value /= 10
        ++count
    }
    return count
}
